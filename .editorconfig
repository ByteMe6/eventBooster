# ---------------------------------------------------------------
# .editorconfig для WebStorm, оптимизированный для стиля macOS
# ---------------------------------------------------------------

root = true

# -----------------------------
# Общие настройки для всех файлов
# -----------------------------
[*]
indent_style = space          # Использование пробела для отступов
indent_size = 2               # Размер отступа — 2 пробела
charset = utf-8               # Кодировка UTF-8
trim_trailing_whitespace = true # Удаление пробелов в конце строк
insert_final_newline = true   # Новая строка в конце файла
max_line_length = 120         # Максимальная длина строки — 120 символов для удобства чтения

# -----------------------------
# Специфичные настройки для форматов JSON, Markdown и YAML
# -----------------------------
[*.{json,md,yaml}]
indent_size = 2               # 2 пробела для отступов

# -----------------------------
# Настройки для скриптовых файлов (JavaScript, TypeScript, Python)
# -----------------------------
[*.{js,ts,py}]
insert_final_newline = true   # Добавление новой строки в конце файлов

# -----------------------------
# Настройки для конфигурационных файлов
# -----------------------------
[*.conf]
charset = utf-8               # UTF-8 для конфигурационных файлов
trim_trailing_whitespace = false # Не удалять пробелы в конце строк в конфигурациях

# -----------------------------
# Установка настроек для отдельных типов файлов
# -----------------------------
[*.{html,css}]
indent_size = 2               # 2 пробела для отступов